<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.home.myapplication.First">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/mainmenu_button_click"
            android:padding="20dp"
            android:text="Please enter the confirmation code sent by e-mail"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_above="@+id/btn_Confirm"
            android:textAlignment="center"
            android:hint="CONFIRMATION CODE"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@color/login_edit"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/btn_Confirm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_singup"
            android:layout_marginTop="20dp"
            android:text="Confirm"
            android:textSize="15sp"
            android:textColor="@color/White" />

    </LinearLayout>

</RelativeLayout>