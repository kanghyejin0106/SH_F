<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    tools:context=".Second">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#753E2D"
                    android:layout_marginRight="20dp"
                    android:text="What's your school?"
                    android:textSize="10pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/school"
                    android:layout_width="25mm"
                    android:textColor="@color/bar2"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/bar"
                        android:textColor="#753E2D"
                        android:text="Search"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#753E2D"
            android:text="What kind of lessor do you want?"
            android:textSize="10pt" />

        <RadioGroup
            android:id="@+id/gran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/granm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Granny" />

            <CheckBox
                android:id="@+id/granf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Grandpa" />

            <CheckBox
                android:id="@+id/granyp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Old couple" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#753E2D"
            android:text="What type of house do you want?"
            android:textSize="10pt" />

        <RadioGroup
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/home1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Detached House" />

            <CheckBox
                android:id="@+id/home2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Apartments" />

            <CheckBox
                android:id="@+id/home3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Row Houses" />

            <CheckBox
                android:id="@+id/home4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Multi-Family Housing" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#753E2D"
            android:text="How many months do you want to sign?"
            android:textSize="10pt" />

        <RadioGroup
            android:id="@+id/period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/ms4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="4 months" />

            <RadioButton
                android:id="@+id/ms6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="6 months" />

            <RadioButton
                android:id="@+id/ms66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="6 months more" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#753E2D"
            android:text="What's the expected rent"
            android:textSize="10pt" />

        <RadioGroup
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/min15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Below 150,000 won" />

            <RadioButton
                android:id="@+id/min20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Less than 200,000 won" />

            <RadioButton
                android:id="@+id/min25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Less than 250,000 won" />

            <RadioButton
                android:id="@+id/min30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Less than 300,000 won" />

            <RadioButton
                android:id="@+id/min35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="Over 300,000 won" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#753E2D"
            android:text="How much can I pay for the bills?"
            android:textSize="10pt" />

        <RadioGroup
            android:id="@+id/bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/bill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="30,000 won or less" />

            <RadioButton
                android:id="@+id/bill2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="50,000 won or less" />

            <RadioButton
                android:id="@+id/bill3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="I don't want to burden it." />

            <RadioButton
                android:id="@+id/bill4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bar2"
                android:buttonTint="@color/bar2"
                android:text="A post-consultation decision" />

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/bar"
        android:textColor="#753E2D"
        android:text="Next" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>