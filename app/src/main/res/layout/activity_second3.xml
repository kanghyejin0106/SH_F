<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="Breakfast?"
                        android:textSize="10pt" />

                    <RadioGroup
                        android:id="@+id/bf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/bf1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="I always eat." />

                        <RadioButton
                            android:id="@+id/bf2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="Eat often." />

                        <RadioButton
                            android:id="@+id/bf3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="I eat sometimes." />

                        <RadioButton
                            android:id="@+id/bf4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="Do not eat." />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="The average wake up time is"
                        android:textSize="10pt" >
                    </TextView>

                    <Spinner
                        android:id="@+id/wakeup"
                        android:entries="@array/wake"
                        android:textColor="#753E2D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="The average sleep time is"
                        android:textSize="10pt" >
                    </TextView>

                    <Spinner
                        android:id="@+id/sleep"
                        android:entries="@array/sleep"
                        android:textColor="#753E2D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="The average comeback time is"
                        android:textSize="10pt" >
                    </TextView>

                    <Spinner
                        android:id="@+id/comeback"
                        android:entries="@array/comeback"
                        android:textColor="#753E2D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="I have call time on"
                        android:textSize="10pt" >
                    </TextView>

                    <Spinner
                        android:id="@+id/call"
                        android:entries="@array/call"
                        android:textColor="#753E2D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="Noise in sleep"
                        android:textSize="10pt" />

                    <RadioGroup
                        android:id="@+id/noise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/noise1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="Sensitive" />

                        <RadioButton
                            android:id="@+id/noise2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="Normal" />

                        <RadioButton
                            android:id="@+id/noise3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="It is rather blunt." />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="The place to study is usually in"
                        android:textSize="10pt" />

                    <RadioGroup
                        android:id="@+id/study"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/study1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="my room" />

                        <RadioButton
                            android:id="@+id/study2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="library" />

                        <RadioButton
                            android:id="@+id/study3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="study room">
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/study4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="cafe">
                        </RadioButton>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="I can use the Lessor (old man) and the kitchen for public use."
                        android:textSize="10pt" />

                    <RadioGroup
                        android:id="@+id/kit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/kit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="Yes." />

                        <RadioButton
                            android:id="@+id/kit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="No." />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="I can do the laundry with the lessor (old man)."
                        android:textSize="10pt" />

                    <RadioGroup
                        android:id="@+id/laundry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/laundry1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="Yes." />

                        <RadioButton
                            android:id="@+id/laundry2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="No." />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#753E2D"
                        android:text="I can use the lessor and bathroom for public use."
                        android:textSize="10pt" />

                    <RadioGroup
                        android:id="@+id/bathroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/bathroom1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="Yes." />

                        <RadioButton
                            android:id="@+id/bathroom2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/bar2"
                            android:buttonTint="@color/bar2"
                            android:text="No." />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@color/bar"
                        android:textColor="#753E2D"
                        android:text="next" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>