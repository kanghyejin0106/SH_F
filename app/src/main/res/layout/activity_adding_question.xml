<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".Adding_question">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#753E2D"
            android:text="What students need to answer about . . ."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/bf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Breakfast"/>

            <CheckBox
                android:id="@+id/kitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Kitchen"/>

            <CheckBox
                android:id="@+id/bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Bathroom"/>

            <CheckBox
                android:id="@+id/laundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Laundry"/>

            <CheckBox
                android:id="@+id/comeback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Time coming back"/>

            <CheckBox
                android:id="@+id/sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Sleep time"/>

            <CheckBox
                android:id="@+id/wakeup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Time waking up"/>

            <CheckBox
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Time calling"/>

            <CheckBox
                android:id="@+id/study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Study place"/>

            <CheckBox
                android:id="@+id/noise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bar2"
                android:textColor="@color/bar2"
                android:text="Noise"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Submit"
                android:textColor="#753E2D"
                android:background="@color/bar"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>