<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textColor="#753E2D"
                            android:text="Noise in sleep"
                            android:textSize="10pt" />

                        <RadioGroup
                            android:id="@+id/noise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/neise1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="Sensitive" />

                            <RadioButton
                                android:id="@+id/noise2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="Normal" />

                            <RadioButton
                                android:id="@+id/noise3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="It is rather blunt." />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textColor="#753E2D"
                            android:text="The place to study is usually in"
                            android:textSize="10pt" />

                        <RadioGroup
                            android:id="@+id/study"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/study1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="my room" />

                            <RadioButton
                                android:id="@+id/study2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="library" />

                            <RadioButton
                                android:id="@+id/study3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="study room">
                            </RadioButton>

                            <RadioButton
                                android:id="@+id/study4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="cafe">
                            </RadioButton>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textColor="#753E2D"
                            android:text="I like music and videos without earphones?"
                            android:textSize="10pt" />

                        <RadioGroup
                            android:id="@+id/listen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/listen1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="Always" />

                            <RadioButton
                                android:id="@+id/listen2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="Frequently" />

                            <RadioButton
                                android:id="@+id/listen3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="Sometimes" />

                            <RadioButton
                                android:id="@+id/listen4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="Do not." />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textColor="#753E2D"
                            android:text="I watch TV?"
                            android:textSize="10pt" />

                        <RadioGroup
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="I see it all the time." />

                            <RadioButton
                                android:id="@+id/tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="Watch often." />

                            <RadioButton
                                android:id="@+id/tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="I see it sometimes." />

                            <RadioButton
                                android:id="@+id/tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar2"
                                android:buttonTint="@color/bar2"
                                android:text="Do not watch." />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@color/bar"
                            android:textColor="#753E2D"
                            android:text="next" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>

</LinearLayout>