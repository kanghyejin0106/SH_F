<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:text="Please register pictures of your house"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/White"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Bedroom"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/White"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:text="Living room"
                android:textStyle="bold"
                android:textSize="25sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@color/Gray"
                android:layout_marginRight="1dp"
                android:id="@+id/iv_bedroom"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginLeft="1dp"
                android:src="@color/Gray"
                android:id="@+id/iv_livingroom"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/add_bedroom"
                android:background="@color/bar"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/White"
                android:layout_marginRight="1dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="add picture" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/add_livingroom"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:background="@color/bar"
                android:layout_marginLeft="1dp"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:text="add picture" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/White"
                android:layout_marginRight="1dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Kitchen"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/White"
                android:textStyle="bold"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:text="Bath room"
                android:textSize="25sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@color/Gray"
                android:layout_marginRight="1dp"
                android:id="@+id/iv_kitchen"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@color/Gray"
                android:layout_marginLeft="1dp"
                android:id="@+id/iv_bathroom"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/add_kitchen"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:background="@color/bar"
                android:layout_marginRight="1dp"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:text="add picture" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/add_bathroom"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:background="@color/bar"
                android:layout_marginLeft="1dp"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:text="add picture" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="Please fix the room price"/>

        <EditText
            android:id="@+id/roomprice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:hint="RoomPrice"
            android:textColorHint="@color/bar"
            android:textAlignment="center"
            android:textColor="@color/bar" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@color/bar"
            android:onClick="Next"
            android:text="Submit"
            android:textColor="#FFFFFF" />


    </LinearLayout>
</ScrollView>