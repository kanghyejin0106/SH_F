<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/login"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.example.home.myapplication.Activity_login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:src="@drawable/seasonhouse"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/loginID_s"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/White"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:inputType="textPersonName"
            android:background="@color/login_edit"
            android:hint="E-MAIL"/>

        <EditText
            android:id="@+id/loginPW_s"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@color/login_edit"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="textPersonName"
            android:hint="PW" />

        <Button
            android:id="@+id/login_s"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/login_text"
            android:layout_marginTop="20dp"
            android:layout_marginRight="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="5dp"
            android:text="LOGIN"/>

        <Button
            android:id="@+id/loginJoin_s"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/login_text"
            android:layout_marginTop="5dp"
            android:layout_marginRight="130dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/login_singup"
            android:text="SIGN UP"/>

    </LinearLayout>
</LinearLayout>
